{
    "compilerOptions": {
      "strict": true,
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",
      "sourceMap": true,
      "outDir": "dist",
      "experimentalDecorators": true,
      "removeComments": true,
      "lib": ["DOM", "DOM.Iterable"]
    },
    "include": ["src/**/*"],
    // Will be compiled to static/scripts instead. See tsconfig.client.json
    "exclude": ["src/view/client_scripts/**/*"]
}